<div class="container">

  <% breadcrumb :edit_user %>

  <h1 class="mt-3">ユーザ設定</h1>
  <hr>

  <div class="container">
    <h2 class="mt-4">プロフィール修正</h2>

    <%= form_with model: @user, local: true do |f| %>
      <!-- ユーザID -->
      <div class="form-group mt-4 col-6">
        <%= f.label "ユーザＩＤ" %>
        <%= f.text_field :user_id, value: @user.login_id, class: "form-control" %>
      </div>

      <!-- ユーザ名 -->
      <div class="form-group my-4 col-6">
        <%= f.label "ユーザ名" %>
        <%= f.text_field :name, value: @user.name, class: "form-control" %>
      </div>

      <!-- パスワード -->
      <div class="form-group my-4 col-6">
        <%= f.label "パスワード" %>
        <%= f.password_field :password, class: "form-control", placeholder: "新しいパスワード"  %>
        <%= f.password_field :password_confirm, class: "form-control mt-2", placeholder: "もう一度入力" %>
      </div>

      <div class="my-5 ml-3"><%= f.submit "プロフィールを登録", class: 'btn btn-primary w-25' %></div>
    <% end %>
  </div>
</div>