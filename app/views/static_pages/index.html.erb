<div class='container'>

  <% breadcrumb :root %>

  <div class="card-deck mt-5">
    <div class="card">
      <div class="card-header">
        <i class="fas fa-book"></i>&nbsp;&nbsp;最近のブック
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% @books.each do |book| %>
          <li class="list-group-item">
            <%= link_to book.title, book_path(book) %>
            <small class="text-muted float-right">
              <i class="fas fa-history"></i>&nbsp;&nbsp;<%= book.updated_at.strftime("%Y-%m-%d") %>
            </small>
          </li>
          <% end %>
        </ul>
      </div>
    </div>

    <div class="card">
      <div class="card-header">
        <i class="far fa-lightbulb"></i>&nbsp;&nbsp;最近のナレッジ
      </div>
      <div class="card-body">
        <ul class="list-group">
          <% @knowledges.each do |knowledge| %>
          <li class="list-group-item">
            <%= link_to knowledge.title, knowledge_path(knowledge) %>
            <small class="text-muted float-right">
              <i class="fas fa-history"></i>&nbsp;&nbsp;<%= knowledge.updated_at.strftime("%Y-%m-%d") %>
            </small>
          </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

