<div class="container">

  <% breadcrumb :knowledges %>

  <div class="text-right">
    <%= link_to new_knowledge_path, class: "btn btn-success mt-3 mb-4" do %>
      <i class="fas fa-plus"></i> ナレッジ新規作成
    <% end %>
  </div>

  <ul class="list-group">
    <% cnt = 0 %>
    <% @knowledges.each do |knowledge| %>
    <li class="list-group-item">
      <!-- タイトル -->
      <strong><%= link_to knowledge.title, knowledge_path(knowledge) %></strong>
      <small class="text-muted float-right">最終更新 : <%= knowledge.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
      <br>
      <!-- タグ -->
      <% @tags[cnt].each do |tag| %>
      <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
      <% end %>
      <br>
    </li>
    <% cnt += 1 %>
    <% end %>
  </ul>
  <br>

  <p class="text-center"><%= page_entries_info @knowledges %></p>
  <%= paginate @knowledges %>
</div>