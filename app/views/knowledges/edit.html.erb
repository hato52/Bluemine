<div class="container">
  <h1 class="text-left my-5">ナレッジ編集</h1>
  
  <div class="card">
    <div class="card-header">
      登録内容
    </div>
    <div class="card-body">
    <%= form_for(@knowledge) do |f| %>

      <div class="form-group">
        <%= f.label "記入者" %>
        <%= f.collection_select :user_id, User.all, :id, :name, {selected: current_user}, {class: 'form-control col-md-6', readonly: true} %>
      </div>

      <div class="form-group">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: 'form-control col-md-6' %>
      </div>

      <div class="form-group">
        <%= f.label "コンテンツ" %>
        <%= f.rich_text_area :content, class: "form-control col-md-6" %>
      </div>
      <hr>
  
      <div class="text-center"><%= f.submit "登録", class: 'btn btn-primary w-25' %></div>
    <% end %>
    </div>
  </div>
</div>