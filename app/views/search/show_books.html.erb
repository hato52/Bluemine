<div class="container">

  <% breadcrumb :search_books %>

  <h1 class="my-3">ブック検索結果：<%= @search_word %></h1>
  <hr>

  <ul class="list-group">
    <% cnt = 0 %>
    <% @books.each do |book| %>
    <li class="list-group-item">
      <!-- タイトル -->
      <strong><%= link_to book.title, book_path(book) %></strong>
      <small class="text-muted float-right">最終更新 : <%= book.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
      <br>
      <!-- タグ -->
      <% @book_tags[cnt].each do |tag| %>
      <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
      <% end %>
      <br>
    </li>
    <% cnt += 1 %>
    <% end %>
  </ul>
  <br>

  <p class="text-center mt-3 mb-5"><%= page_entries_info @books %></p>
  <%= paginate @books %>
</div>
