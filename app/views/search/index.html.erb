<div class='container'>

  <% breadcrumb :search %>

  <!-- ヘッダ部 -->
  <h1 class="my-3">検索結果：<%= @search_word %></h1>
  <hr>

  <div class="card mt-3">
    <div class="card-header">
      <i class="fas fa-book"></i>&nbsp;&nbsp;ブック
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% cnt = 0 %>
        <% @books.each do |book| %>
        <li class="list-group-item">
          <!-- タイトル -->
          <strong><%= link_to book.title, book_path(book) %></strong>
          <small class="text-muted float-right">最終更新 : <%= book.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
          <br>
          <!-- タグ -->
          <% @book_tags[cnt].each do |tag| %>
          <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
          <% end %>
          <br>
        </li>
        <% cnt += 1 %>
        <% end %>
        <li class="list-group-item text-center">
          <%= link_to "もっと見る", search_show_books_path(q: @search_word) %>
        </li>
      </ul>
    </div>
  </div>

  <div class="card my-5">
    <div class="card-header">
      <i class="far fa-lightbulb"></i>&nbsp;&nbsp;ナレッジ
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% cnt = 0 %>
        <% @knowledges.each do |knowledge| %>
        <li class="list-group-item">
          <!-- タイトル -->
          <strong><%= link_to knowledge.title, knowledge_path(knowledge) %></strong>
          <small class="text-muted float-right">最終更新 : <%= knowledge.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
          <br>
          <!-- タグ -->
          <% @knowledge_tags[cnt].each do |tag| %>
          <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
          <% end %>
          <br>
        </li>
        <% cnt += 1 %>
        <% end %>
        <li class="list-group-item text-center">
          <%= link_to "もっと見る", search_show_knowledges_path(q: @search_word) %>
        </li>
      </ul>
    </div>
  </div>

  <div class="card my-5">
    <div class="card-header">
      <i class="fas fa-tags"></i>&nbsp;&nbsp;タグ
    </div>
    <div class="card-body">
      <ul class="list-group">
        <% cnt = 0 %>
        <% @tags.each do |tag| %>
        <li class="list-group-item">
          <!-- タグ名 -->
          <strong><%= link_to "#" + tag.name, show_books_tag_path(tag) %></strong>
          <br><br>
        </li>
        <% cnt += 1 %>
        <% end %>
        <li class="list-group-item text-center">
          <%= link_to "もっと見る", search_show_tags_path(q: @search_word) %>
        </li>
      </ul>
    </div>
  </div>
</div>
