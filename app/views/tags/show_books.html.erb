<div class="container">

  <% breadcrumb :show_tag, @tag %>

  <!-- ヘッダ部 -->
  <h1 class="my-3">#<%= @tag.name %></h1>
  <hr>

  <ul class="nav nav-tabs justify-content-center">
    <li class="nav-item">
      <%= link_to "ブック", "#", class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "ナレッジ", show_knowledges_tag_path(@tag.id), class: "nav-link" %>
    </li>
  </ul>

  <!-- コンテンツ部 -->
  <ul class="list-group mt-4">
    <% cnt = 0 %>
    <% @books.each do |book| %>
    <li class="list-group-item">
      <!-- タイトル -->
      <strong><%= link_to book.title, book_path(book) %></strong>
      <small class="text-muted float-right">最終更新 : <%= book.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
      <br>
      <!-- タグ -->
      <% @book_tags[cnt].each do |tag| %>
      <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
      <% end %>
      <br>
    </li>
    <% cnt += 1 %>
    <% end %>
  </ul>
  <br>
</div>