<div class="container">
  <h1 class="text-left my-5">タグ管理</h1>

  <div class="card">
    <div class="card-header">
      登録内容
    </div>
    <div class="card-body">
    <%= form_tag(tags_path, method: :post) do %>
      <div class="form-group col-md-6">
        <%= label_tag "名称" %>
        <%= text_field_tag :name,'', class: "form-control" %>
      </div>

      <div class="text-right">
        <%= submit_tag "登録", class: "btn btn-success" %>
      </div>
    <% end %>
    </div>
  </div>

  <br><br><br>

  <%= paginate @tags %>

  <table class="table  table-striped">
    <thead>
      <tr>
        <th scope="col">名称</th>
      </tr>
    </thead>
    <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td class="align-middle" scope="row"><%= tag.name %></td>
        <td class="align-middle" scope="row">
          <%= link_to "削除", tag_path(tag), method: :delete, data: {confirm: "#{tag.name}を削除しますか？"}, class: "btn btn-danger float-right my-auto" %>
        </td>
      </tr>
    <% end %>  
    </tbody>
  </table>

  <%= paginate @tags %>

</div>