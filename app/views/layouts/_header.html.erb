<header class="sticky-top">
  <nav class="navbar navbar-expand-sm navbar-light" style="background-color: #e3f2fd;">
    <div class="container-fluid">

      <%= link_to index_path, id: 'logo', class: 'navbar-brand' do %>
        <%= image_tag 'logo.png', size: "45x45" %>
      <% end %>

      <!-- ブランドロゴ -->
      <button class="navbar-toggler navbar-toggle-right" type="button" data-toggle="collapse" data-target="#menu">
        <span class="navbar-toggler-icon"></span>
      </button>

      <!-- navbarメニュー -->
      <div id="menu" class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to books_path, class: 'nav-link' do %>
              <i class="fas fa-book"></i> ブック
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to knowledges_path, class: 'nav-link' do %>
              <i class="far fa-lightbulb"></i> ナレッジ
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to tags_path, class: 'nav-link' do %>
              <i class="fas fa-tags"></i> タグ
            <% end %>
          </li>
        </ul>

        <!-- 検索バー -->
        <div class="form-inline my-2 mr-5">
          <%= form_tag(search_path, method: :get, class: "mx-auto") do %>
            <%= text_field_tag :q, '', class: "form-control mr-2", placeholder: "キーワードで検索" %>
            <%= submit_tag '検索', :name => nil, class: "btn btn-outline-primary" %>
          <% end %>
        </div>

        <!-- ユーザメニュー -->
        <ul class="navbar-nav">
          <li class="nav-item dropdown active">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fas fa-user"></i>
              <%= current_user.name %>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "#", method: 'get', class: 'dropdown-item mb-1' do %>
                <i class="far fa-newspaper"></i>&nbsp;&nbsp;&nbsp;自分の投稿
              <% end %>
              <%= link_to "#", method: 'get', class: 'dropdown-item disabled mb-1' do %>
                <i class="far fa-star"></i>&nbsp;&nbsp;&nbsp;お気に入り
              <% end %>
              <%= link_to user_path, method: 'get', class: 'dropdown-item mb-1' do %>
                <i class="fas fa-cog"></i>&nbsp;&nbsp;&nbsp;ユーザ設定
              <% end %>
              <div class="dropdown-divider"></div>
              <%= link_to logout_path, method: 'delete', class: 'dropdown-item' do %>
                <i class="fas fa-power-off"></i>&nbsp;&nbsp;&nbsp;ログアウト
              <% end %>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>
