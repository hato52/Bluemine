<div class="container">

  <% breadcrumb :show_book, @book %>

  <!-- ヘッダ部 -->
  <h6 class="mt-4">
    <i class="fas fa-user"></i> <%= @book.user.name %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <small class="text-muted">最終更新 : <%= @book.updated_at %></small>
  </h6>
  <h1 class="my-3"><%= @book.title %></h1>
  <p><%= @book.detail %></p>

  <% @tags.each do |tag| %>
  <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
  <% end %>
  <hr>
  
  <!-- ナレッジ一覧 -->
  <h3 class="ml-3 mb-3">目次</h3>
  <ul class="list-group">
    <% cnt = 0 %>
    <% @knowledges.each do |knowledge| %>
    <li class="list-group-item">
      <!-- タイトル -->
      <strong><%= link_to knowledge.title, book_book_knowledge_path(@book, knowledge.id) %></strong>
      <small class="text-muted float-right">最終更新 : <%= knowledge.updated_at %></small>
      <br>
      <!-- タグ -->
      <% @knowledge_tags[cnt].each do |tag| %>
      <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
      <% end %>
      <br>
    </li>
    <% cnt += 1 %>
    <% end %>
  </ul>
  <br>
  
  <%= paginate @knowledges %>
  
</div>
