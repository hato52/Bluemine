<div class="container">
  <h1 class="text-left my-5">ブック詳細</h1>
  
  <div class="card">
    <div class="card-body">
    <%= form_for(@book) do |f| %>

      <div class="form-group">
        <%= f.label "記入者" %>
        <%= f.collection_select :user_id, User.all, :id, :name, {selected: current_user}, {class: 'form-control col-md-6', readonly: true} %>
      </div>

      <div class="form-group">
        <%= f.label "タイトル" %>
        <%= f.text_field :title, class: 'form-control col-md-6' %>
      </div>

      <div class="form-group">
        <%= f.label "詳細" %>
        <%= f.text_field :detail, class: "form-control col-md-6" %>
      </div>

    <% end %>
    </div>
  </div>
</div>