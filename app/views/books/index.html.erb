<div class="container">

  <% breadcrumb :books %>

  <div class="text-right">
    <%= link_to new_book_path, class: "btn btn-success mt-3 mb-4" do %>
      <i class="fas fa-plus"></i> ブック新規作成
    <% end %>
  </div>

  <ul class="list-group">
    <% cnt = 0 %>
    <% @books.each do |book| %>
    <li class="list-group-item">
      <!-- タイトル -->
      <strong><%= link_to book.title, book_path(book) %></strong>
      <small class="text-muted float-right">最終更新 : <%= book.updated_at %></small>
      <br>
      <!-- タグ -->
      <% @tags[cnt].each do |tag| %>
      <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
      <% end %>
      <br>
    </li>
    <% cnt += 1 %>
    <% end %>
  </ul>
  <br>

  <p class="text-center mt-3 mb-5"><%= page_entries_info @books %></p>
  <%= paginate @books %>
</div>
