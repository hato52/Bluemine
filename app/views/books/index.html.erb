<div class="container">

  <% breadcrumb :books %>

  <%= link_to "新規登録", new_book_path, class: "btn btn-success float-right my-auto" %>
  <!-- 検索バー -->
  <div class="input-group mt-4 mb-5 col-6 mx-auto">
    <input type="text" class="form-control" placeholder="Please Enter Keywords..." aria-describedby="button-addon2">
    <div class="input-group-append">
      <button class="btn btn-outline-primary" type="button" id="button-addon2">
        <i class="fas fa-search"></i>
      </button>
    </div>
  </div>

  <p class="text-center"><%= page_entries_info @books %></p>

  <ul class="list-group">
    <% cnt = 0 %>
    <% @books.each do |book| %>
    <li class="list-group-item">
      <!-- タイトル -->
      <strong><%= link_to book.title, book_path(book) %></strong>
      <small class="text-muted float-right">最終更新 : <%= book.updated_at %></small>
      <br>
      <!-- タグ -->
      <% @tags[cnt].each do |tag| %>
      <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
      <% end %>
      <br>
    </li>
    <% cnt += 1 %>
    <% end %>
  </ul>
  <br>
  <%= paginate @books %>
</div>