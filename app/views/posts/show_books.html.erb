<div class="container">

  <% breadcrumb :posts %>

  <!-- ヘッダ部 -->
  <h1 class="my-3">自分の投稿</h1>
  <hr>

  <ul class="nav nav-tabs justify-content-center">
    <li class="nav-item">
      <%= link_to "ブック", "#", class: "nav-link active" %>
    </li>
    <li class="nav-item">
      <%= link_to "ナレッジ", show_knowledges_posts_path, class: "nav-link" %>
    </li>
  </ul>

  <!-- コンテンツ部 -->
  <ul class="list-group mt-4">
    <% cnt = 0 %>
    <% @books.each do |book| %>
    <li class="list-group-item">
      <!-- タイトル -->
      <strong><%= link_to book.title, book_path(book) %></strong>
      <%= link_to  "削除", book_path(book), method: :delete, class: "btn btn-danger float-right", data: {confirm: "#{book.title}を削除しますか？"} %>
      <%= link_to  "修正", edit_book_path(book), class: "btn btn-success float-right mr-4" %>
      <small class="text-muted float-right mr-4">最終更新 : <%= book.updated_at.strftime("%Y-%m-%d %H:%M") %></small>
      <br>
      <!-- タグ -->
      <% @book_tags[cnt].each do |tag| %>
      <span class="badge badge-pill badge-info"><%= tag.name %></span>&nbsp;
      <% end %>
      <br>
    </li>
    <% cnt += 1 %>
    <% end %>
  </ul>
  <br>

  <p class="text-center"><%= page_entries_info @books %></p>
  <%= paginate @books %>
</div>
